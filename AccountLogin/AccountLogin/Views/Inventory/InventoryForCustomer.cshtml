@model List<AccountLogin.Models.Report>
@{
    ViewBag.Title = "Report OrderDetail";
}

<h2>Report OrderDetail</h2>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <table class="table">
                <thead>
                    <tr>
                        <td>Sum</td>
                        <td>Max</td>
                        <td>Min</td>
                        <td>Avg</td>
                        <td>Count</td>
                        <td>Customer</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rp in Model)
                    {
                        <tr>
                            <td>@rp.Sum</td>
                            <td>@rp.MaxPrice</td>
                            <td>@rp.MinPrice</td>
                            <td>@Html.FormatValue(rp.AvgPrice, "{0:#,###.#0}")</td>
                            <td>@rp.Count</td>
                            <td>@rp.Category</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
