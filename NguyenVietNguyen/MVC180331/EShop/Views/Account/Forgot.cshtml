@using EShop.i18n

@{
    ViewBag.Title = @Global.ForgetPassword;
}

<div class="panel panel-danger">
    <div class="panel-heading">@Global.ForgetPassword</div>
    <div class="panel-body">
        @Html.ValidationSummary()
        @using(Html.BeginForm()){
            <div class="form-group">
                <label>@Global.Username</label>
                @Html.TextBox("Id", null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>@Global.Email</label>
                @Html.TextBox("Email", null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <button class="btn btn-danger">@Global.GetPassword</button>
            </div>
        }
    </div>
</div>