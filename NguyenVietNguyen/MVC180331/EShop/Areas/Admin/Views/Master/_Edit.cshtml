@using EShop.i18n
@model EShop.Models.Master

@using (Html.BeginForm())
{
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="text-right text-danger">@TempData["Message"]</div>
            <div class="form-group">
                <label>@Global.Id</label>
                @Html.TextBoxFor(m => m.Id, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>@Global.Password</label>
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>@Global.Fullname</label>
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>@Global.Phone</label>
                @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>@Global.Email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="panel-footer">
            <button class="btn btn-default" formaction="@ViewBag.Controller/Insert">
                <span class="glyphicon glyphicon-save"></span> @Global.Create
            </button>
            <button class="btn btn-default" formaction="@ViewBag.Controller/Update">
                <span class="glyphicon glyphicon-saved"></span> @Global.Update
            </button>
            <button class="btn btn-default" formaction="@ViewBag.Controller/Delete">
                <span class="glyphicon glyphicon-trash"></span> @Global.Delete
            </button>
            <a class="btn btn-default" href="@ViewBag.Controller/Index">
                <span class="glyphicon glyphicon-plus"></span> @Global.New
            </a>
        </div>
    </div>
}