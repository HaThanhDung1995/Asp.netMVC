@using EShop.i18n
@model EShop.Models.Product
@{
    ViewBag.Title = @Global.ProductManager;
    ViewBag.Controller = "/Admin/Product";
}

<h2 class="alert alert-success">@ViewBag.Title</h2>


<ul class="nav nav-tabs">
    <li class="active">
        <a data-toggle="tab" href="#edit">
            <span class="glyphicon glyphicon-edit"></span> @Global.Edit
        </a>
    </li>
    <li>
        <a data-toggle="tab" href="#list">
            <span class="glyphicon glyphicon-edit"></span> @Global.List
        </a>
    </li>
</ul>

<div class="tab-content">
    <div id="edit" class="tab-pane fade in active">
        @Html.Partial("_Edit", Model)
    </div>
    <div id="list" class="tab-pane fade">
        @Html.Partial("_Table")
    </div>
</div>
