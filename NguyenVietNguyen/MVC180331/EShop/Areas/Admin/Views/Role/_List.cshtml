@using EShop.i18n
<div class="panel panel-default">
    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>@Global.Id</th>
                <th>@Global.Name</th>
                <th>@Global.Password</th>
                <th>@Global.Phone</th>
                <th>@Global.Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Item in ViewBag.Items as List<EShop.Models.Role>)
            {
                <tr>
                    <td>@Item.Id</td>
                    <td>@Item.Name</td>
                    <td>
                        <a href="@ViewBag.Controller/Edit/@Item.Id" class="btn btn-sm btn-default">
                            <span class="glyphicon glyphicon-edit"></span> @Global.Edit
                        </a>
                        <a href="@ViewBag.Controller//Delete/@Item.Id" class="btn btn-sm btn-default">
                            <span class="glyphicon glyphicon-trash"></span> @Global.Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>